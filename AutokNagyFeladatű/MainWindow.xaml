                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF388E3C" TargetName="border"/>
                                        <!-- Sötétebb zöld -->
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <TextBox x:Name="tbxColor" HorizontalAlignment="Left" Margin="592,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" Height="24"/>
        <Label Content="Szín" HorizontalAlignment="Left" Margin="492,190,0,0" VerticalAlignment="Top" Height="32" Width="96" FontWeight="Bold" FontSize="16" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="tbxFuelConsumption" HorizontalAlignment="Left" Margin="592,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" Height="24"/>
        <Label Content="Fogyasztás" HorizontalAlignment="Left" Margin="492,222,0,0" VerticalAlignment="Top" Height="32" Width="96" FontWeight="Bold" FontSize="16" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
